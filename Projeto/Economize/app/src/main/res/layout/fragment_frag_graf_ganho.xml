<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aedes.economize.frags_graficos.FragGrafGanho">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/imgbtn_grafico_anterior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/imgbtn_ano_anterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/backkk"
                tools:ignore="ContentDescription" />

            <Spinner
                android:id="@+id/spnn_anos_ganhos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imgbtn_ano_proximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/forwarddd"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_grafico_anterior"
            android:layout_width="28dp"
            android:layout_height="182dp"
            android:layout_weight="1"
            android:src="@drawable/left_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/linear_lay_graficos"
            app:layout_constraintEnd_toStartOf="@+id/linear_lay_graficos"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linear_lay_graficos"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear_lay_graficos"
            android:layout_width="320dp"
            android:layout_height="182dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/listv_ganhos"
            app:layout_constraintEnd_toStartOf="@+id/imgbtn_grafico_sucessor"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_grafico_anterior"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

            <com.echo.holographlibrary.BarGraph
                android:id="@+id/bar_graph_ganhos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="76dp" />

            <com.echo.holographlibrary.PieGraph
                android:id="@+id/pie_graph_ganhos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="166dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_grafico_sucessor"
            android:layout_width="28dp"
            android:layout_height="182dp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/linear_lay_graficos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/linear_lay_graficos"
            app:layout_constraintTop_toTopOf="@+id/linear_lay_graficos"
            tools:ignore="ContentDescription" />

        <ListView
            android:id="@+id/listv_ganhos"
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgbtn_grafico_anterior" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
