<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aedes.economize.frags_graficos.FragGrafGanho">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.echo.holographlibrary.BarGraph
            android:id="@+id/bar_graph_ganhos"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintBottom_toTopOf="@+id/pie_graph_ganhos"
            app:layout_constraintEnd_toEndOf="@+id/pie_graph_ganhos"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/pie_graph_ganhos"
            app:layout_constraintTop_toTopOf="parent" />

        <com.echo.holographlibrary.PieGraph
            android:id="@+id/pie_graph_ganhos"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintBottom_toTopOf="@+id/listv_ganhos"
            app:layout_constraintEnd_toEndOf="@+id/listv_ganhos"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/listv_ganhos"
            app:layout_constraintTop_toBottomOf="@+id/bar_graph_ganhos" />

        <ListView
            android:id="@+id/listv_ganhos"
            android:layout_width="0dp"
            android:layout_height="165dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pie_graph_ganhos" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
