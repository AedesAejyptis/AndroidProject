<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtOrcTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtOrcAbrangencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtOrcTitulo"
            android:layout_below="@+id/txtOrcTitulo"
            android:layout_marginTop="14dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtOrcValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtOrcTitulo"
            android:layout_alignBottom="@+id/txtOrcTitulo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp"
            android:text="TextView" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_delete" />

</LinearLayout>